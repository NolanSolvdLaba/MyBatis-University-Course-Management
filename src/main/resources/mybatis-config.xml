<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <!-- Specify the MySQL driver class name -->
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <!-- Replace with your MySQL database connection URL, username, and password -->
                <property name="url" value="jdbc:mysql://localhost:3306/your-database-name"/>
                <property name="username" value="your-username"/>
                <property name="password" value="your-password"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <!-- Add the mapper XML file(s) here -->
        <mapper resource="com/solvd/university/mapper/StudentMapper.xml"/>
        <!-- Add other mapper files as needed -->
    </mappers>
</configuration>
